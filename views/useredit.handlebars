<h1>Atualizando dados do ususario: {{user.name}}</h1>
<form action="/users/update" class="form" method="POST">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o seu nome: "value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Ocupacao:</label>
        <input type="text" name="occupation" placeholder="Digite a sua ocupacao: "value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
        {{else}}
            <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promocoes:</label>
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
<h2>Endereco:</h2>
<form action="/address/create" method="POST">
    <input type="hidden" name="userId" value="{{user.id}}">
    <div class="form-control">
        <label for="street">Rua:</label>
        <input type="text" name="street" placeholder="Informe seu endereco">
    </div>
    <div class="form-control">
        <label for="number">Numero:</label>
        <input type="text" name="number" placeholder="Informe o numero da casa">
    </div>
    <div class="form-control">
        <label for="city">Cidade:</label>
        <input type="text" name="city" placeholder="Informe seu endereco">
    </div>
    <input type="submit" value="Adicionar endereco">
</form>
</div>
<div class="address-list">
    <h2>Lista de endereco</h2>
    {{#each user.addresses}}
        <div>
            #{{this.id}} - 
            {{this.street}} - 
            {{this.number}} - 
            {{this.city}}
            <form action="/address/delete" method="POST">
                <input type="hidden" name="UserId" value="{{this.UserId}}">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="submit" value="Excluir">            
            </form>
        </div>
    {{/each}}
</div>